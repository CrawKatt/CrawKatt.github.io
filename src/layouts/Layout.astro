---
import { ViewTransitions } from 'astro:transitions';
interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
        <meta
            name="description"
            content="Portafolio de Modder de Minecraft y Programador en Rust."
        />
        <link
            href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap"
            rel="stylesheet"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css"
            integrity="sha384-pONn4xj4r4ZvUjKc8kUQ7TgKSDKEygPTJ1z8qhN5c+y+4mxXkZt4nH+lpiAn4h9W"
            crossorigin="anonymous"
        />
    </head>
	<body>
		<slot />
		<footer><span>&copy; 2023 CrawKatt. All rights reserved.</span></footer>
	</body>
	<script
            src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"
            integrity="sha384-XCblzicI6XgXh6s8PtixBiERXgdxP90MxXxVEfC9zC5Pqtncw1xJhUnA1jaGaSLQ"
            crossorigin="anonymous"
        ></script>
        <script>
            AOS.init({
                duration: 1000,
                once: true,
            });
        </script>
</html>
<style is:global>
* {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
    font-family: "Press Start 2P", cursive;
}

body {
    /* font-family: "Press Start 2P", cursive; */
    color: #fff;
    background-color: #3c3f41;
    background-image: url("/img/background.webp");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

.area_div {
    grid-area: title;
    width: 100%;
    height: 100%;
}

.title_container {
    display: flex;
    flex-direction: column-reverse;
}

.title_container h1 {
    font-size: 36px;
    text-align: center;
    margin: 0;
}

@keyframes pixelEntrance {
    0% {
        opacity: 0;
        transform: scale(0.5);
    }
    50% {
        opacity: 0.5;
        transform: scale(1.1);
    }
    100% {
        opacity: 1;
        transform: scale(1);
    }
}

li,
p,
span,
a {
    text-wrap: pretty;
}

nav {
    background-color: #2e2e2e;
    position: fixed;
    width: 100%;
    z-index: 1;
}

nav ul {
    display: flex;
    justify-content: center;
    list-style: none;
}

nav button {
    display: block;
    /* font-family: "Press Start 2P", monospace; */
    background: transparent;
    border: none;
    padding: 15px 20px;
    color: #fff;
    text-decoration: none;
    text-transform: uppercase;
    font-weight: bold;
    transition: background-color 0.3s;
}

nav button:hover,
nav button.active {
    background-color: #55aa55;
}

.wrapper {
    flex: 1 0 auto;
    display: flex;
    flex-direction: column;
}

.container {
    /* flex: 1 0 auto; */
    max-width: 1200px;
    margin: auto;
    padding: 40px 20px;
}

.section {
    opacity: 1;
    max-height: 1000px;
    overflow: hidden;
    margin-bottom: 4rem;
    box-sizing: content-box;
    transition:
        opacity 0.5s ease,
        max-height 0.5s ease,
        margin-top 0.5s ease;
}

.section.hidden {
    opacity: 0;
    max-height: 0;
}

.section.hide {
    display: none;
}

.section h2 {
    font-size: 28px;
    margin-bottom: 40px;
    text-align: center;
    position: relative;
    color: #fff;
}

.section h2::after {
    content: "";
    width: 80px;
    height: 8px;
    background-color: #55aa55;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: -20px;
}

.section p {
    font-size: 16px;
    line-height: 1.6;
}

.projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
}

.project {
    position: relative;
    background-color: rgba(0, 0, 0, 0.6);
    border: 4px solid #2e2e2e;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 0 10px #000;
    padding: 20px;
    text-align: center;
    transition: transform 0.3s;
}

.project:hover .project-content {
    transform: translateY(-10px);
}

.project-content {
    transition: transform 0.3s;
}

/* Logo de los proyectos */
.project-image {
    width: 128px;
    height: 128px;
    display: block;
    margin: 0 auto 20px auto;
    transition: transform 0.3s;
}

.project-image:hover {
    transform: scale(1.05);
}

.project h3 {
    margin: 0 0 10px 0;
    font-size: 20px;
}

.project p {
    margin: 0 0 20px 0;
    color: #ddd;
}

/* Links a GitHub, Modrinth, CurseForge, etc */
.project-links {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 15px;
}

.project-links a {
    display: inline-block;
}

.project-links a .platform-icon {
    width: 64px;
    height: 64px;
    transition: transform 0.3s;
}

.project-links a .platform-icon:hover {
    transform: scale(1.2);
}

.achievements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
}

.achievement {
    background-color: rgba(0, 0, 0, 0.6);
    border: 4px solid #2e2e2e;
    border-radius: 8px;
    padding: 20px;
    transition: transform 0.3s;
}

.achievement:hover {
    transform: translateY(-10px);
}

.achievement h3 {
    font-size: 20px;
    margin-bottom: 10px;
    text-align: center;
}

.achievement p {
    color: #ddd;
    text-align: center;
}

.achievement-links {
    display: flex;
    justify-content: center;
    margin-top: 10px;
}

.achievement-links a {
    display: inline-block;
}

.achievement-links a .platform-icon {
    width: 32px;
    height: 32px;
    transition: transform 0.3s;
}

.achievement-links a .platform-icon:hover {
    transform: scale(1.2);
}

/* Íconos SVG de GitHub, Twitter, Discord, etc */
.social-icons {
    display: flex;
    justify-content: center;
    margin-top: 20px;
    gap: 15px;
}

.social-icons a {
    display: inline-block;
}

.social-icons a .platform-icon {
    width: 32px;
    height: 32px;
    transition: transform 0.3s;
}

.social-icons a .platform-icon:hover {
    transform: scale(1.2);
}

/* Parte de abajo del sitio */
footer {
    background-color: #2e2e2e;
    color: #fff;
    display: flex;
    justify-content: center;
    padding: 20px 0;
}

@media (max-width: 768px) {
    .section h2 {
        font-size: 24px;
    }

    nav ul {
        flex-direction: column;
    }

    nav button {
        border-top: 1px solid #444;
        border-bottom: 1px solid #444;
    }

    .platform-icon {
        width: 28px;
        height: 28px;
    }
}

button:focus {
    outline: 2px dashed #55aa55;
    outline-offset: 4px;
}

.skills-list {
    list-style-type: square;
    margin: 20px 0 0 40px;
    font-size: 16px;
    line-height: 1.6;
}

.skills-list li {
    margin-bottom: 10px;
}

/* Estilos para navegadores WebKit (Chrome, Safari, Edge) */
/* Personalización del scrollbar para navegadores WebKit */
::-webkit-scrollbar {
    width: 16px;
}

::-webkit-scrollbar-track {
    background: #2e2e2e;
}

::-webkit-scrollbar-thumb {
    background: linear-gradient(45deg, #4caf50, #8bc34a);
    border-radius: 8px;
    border: 2px solid #1b5e20;
}

::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(45deg, #66bb6a, #aed581);
}

/* Personalización del scrollbar para Firefox */
html {
    scrollbar-width: thin;
    scrollbar-color: #4caf50 #2e2e2e;
}
</style>
